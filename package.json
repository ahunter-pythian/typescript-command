{
  "name": "typescript-command",
  "version": "1.0.0",
  "description": "A node.js command-line interface written in TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahunter-pythian/typescript-command.git"
  },
  "author": "Anthony Hunter",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "compile": "tsc && tslint --project .",
    "local-bin": "COMMAND=$(ls `pwd`/src/cmd.js) && chmod +x $COMMAND && ln -fs $COMMAND /usr/local/bin/cmd",
    "build": "yarn compile && yarn local-bin && cmd --help",
    "debug": "COMMAND=$(ls `pwd`/src/cmd.js) && node --inspect-brk $COMMAND hello",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "25.1.2",
    "@types/node": "13.7.1",
    "@types/readline-sync": "1.4.3",
    "@types/superagent": "4.1.6",
    "jest": "25.1.0",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tslint": "6.0.0",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "commander": "4.1.1",
    "readline-sync": "1.4.10",
    "superagent": "5.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/cmd.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "tests-coverage-report",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  }
}
